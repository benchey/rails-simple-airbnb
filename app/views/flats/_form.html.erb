<%= simple_form_for (flat) do |f| %>
  <div class="form-group">
    <%= f.label :name  %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address  %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :picture_url  %>
    <%= f.text_field :picture_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description  %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :Number_of_guests  %>
    <%= f.text_field :number_of_guests, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price_per_night  %>
    <%= f.text_field :price_per_night, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Flat", class: "btn btn-primary" %>
    <%= link_to "Cancel", flats_path, class: "btn btn-danger" %>
  </div>
<% end %>
